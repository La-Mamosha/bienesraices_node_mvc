extends ../layout/index

block contenido
    div(class="py-10")
        h1(class="text-4xl my-10 font-extrabold text-center") Bienes 
            span(class="font-normal") Raices
        h2(class="text-center text-2xl font-extrabold")= pagina 

        if errores
            div(class="max-w-md mx-auto my-10")
                each error in errores 
                    p(class="bg-red-600 text-white uppercase text-xs text-center p-2 mb-1 font-bold")= error.msg 

        div(class="mt-8 mx-auto max-w-md")
            div(class="bg-white py-8 px-4 shadow")
                form(class="space-y-5" method="POST" action="/auth/registro" noValidate)
                    input(type="hidden" name="_csrf" value= csrfToken)
                    div 
                        label(class="block text-sm uppercase text-gray-500 mb-2 font-bold" for="nombre") Nombre
                        input(id="nombre" class="w-full px-3 py-2 border border-gray-300 rounded-md placeholder-gray-400" 
                        placeholder="Escribe tu nombre" type="text" name="nombre" value= usuario ? usuario.nombre : '')

                    div 
                        label(class="block text-sm uppercase text-gray-500 mb-2 font-bold" for="email") Email
                        input(id="email" class="w-full px-3 py-2 border border-gray-300 rounded-md placeholder-gray-400" 
                        placeholder="Escribe tu email" type="email" name="email" value= usuario ? usuario.email : '')

                    div 
                        label(class="block text-sm uppercase text-gray-500 mb-2 font-bold" for="password") Password
                        input(id="password" class="w-full px-3 py-2 border border-gray-300 rounded-md placeholder-gray-400" 
                        type="password" name="password" placeholder="Escribe tu contraseña")

                    div 
                        label(class="block text-sm uppercase text-gray-500 mb-2 font-bold" for="repetir_password") Repetir Password
                        input(id="repetir_password" class="w-full px-3 py-2 border border-gray-300 rounded-md placeholder-gray-400" 
                        type="password" name="repetir_password" placeholder="Repite tu contraseña")

                    div(class="flex items-center justify-between")
                        a(class="text-gray-500 text-xs " href="/auth/login") ¿Ya tienes cuenta? Inicia sesión 
                        a(class="text-gray-500 text-xs " href="/auth/olvide-password") Olvide mi password

                    input(class="w-full  bg-lime-600 hover:bg-lime-400 text-white font-bold py-3 cursor-pointer " 
                    type="submit" value="Crear cuenta")






















