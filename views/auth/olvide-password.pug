extends ../layout/index


block contenido
    div(class="py-10")
        h1(class="text-4xl my-10 font-extrabold text-center") Bienes 
            span(class="font-normal") Raices
        h2(class="text-center text-2xl font-extrabold")= pagina 

        if errores
            div(class="max-w-md mx-auto my-10")
                each error in errores 
                    p(class="bg-red-600 text-white uppercase text-xs text-center p-2 mb-1 font-bold")= error.msg 

        div(class="mt-8 mx-auto max-w-md")
            div(class="bg-white py-8 px-4 shadow")
                form(class="space-y-5" method="POST" action="/auth/olvide-password" noValidate)
                    input(type="hidden" name="_csrf" value= csrfToken)
                    
                    div 
                        label(class="block text-sm uppercase text-gray-500 mb-2 font-bold" for="email") Email de registro
                        input(id="email" class="w-full px-3 py-2 border border-gray-300 rounded-md placeholder-gray-400" type="email" name="email" placeholder="Ingresa tu email")

                    div(class="flex items-center justify-between")
                        a(class="text-gray-500 text-xs " href="/auth/registro") ¿No tienes cuenta? Registrate aquí 
                        a(class="text-gray-500 text-xs " href="/auth/login") ¿Ya tienes cuenta? Inicia sesión 

                    input(class="w-full  bg-lime-600 hover:bg-lime-400 text-white font-bold py-3 cursor-pointer " type="submit" value="Enviar instrucciones")






















